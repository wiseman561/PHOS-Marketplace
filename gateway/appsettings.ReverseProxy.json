{
  "ReverseProxy": {
    "Routes": {
      "catalog": {
        "ClusterId": "catalog",
        "Match": { "Path": "/catalog/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/catalog" }
        ]
      },
      "review": {
        "ClusterId": "review",
        "Match": { "Path": "/review/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/review" }
        ]
      },
      "entitlements": {
        "ClusterId": "entitlements",
        "Match": { "Path": "/entitlements/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/entitlements" }
        ]
      },
      "appstore": {
        "ClusterId": "appstore",
        "Match": { "Path": "/appstore/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/appstore" }
        ]
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": { "d1": { "Address": "http://localhost:5080/" } }
      },
      "review": {
        "Destinations": { "d1": { "Address": "http://localhost:5081/" } }
      },
      "entitlements": {
        "Destinations": { "d1": { "Address": "http://localhost:5082/" } }
      },
      "appstore": {
        "Destinations": { "d1": { "Address": "http://localhost:5083/" } }
      }
    }
  }
}
